<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/backgroundLayout"
        android:layout_width="match_parent"
        android:layout_height="395sp"
        android:scaleType="centerCrop"
        android:src="@drawable/women"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:src="@drawable/univ_logo"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundLayout"
        app:layout_constraintEnd_toEndOf="@id/backgroundLayout"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="@id/backgroundLayout"
        app:layout_constraintTop_toTopOf="@id/backgroundLayout"
        app:layout_constraintVertical_bias="0.082" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backgroundLayout"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/backgroundLayout"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:fontFamily="sans-serif"
            android:text="gggggg"
            android:textColor="@color/blue"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHeading"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="5sp"
            android:fontFamily="sans-serif"
            android:text="kkkkk"
            android:textColor="@color/blue"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/backgroundLayout"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/backgroundLayout"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="2sp"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp">
        <Space
            android:layout_width="20sp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/ind1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/active_dot_layout" />
        <Space
            android:layout_width="10sp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/ind2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/non_active_dot_xml" />
        <Space
            android:layout_width="10sp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/ind3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/non_active_dot_xml" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
