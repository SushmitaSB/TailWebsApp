<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="#2C5364"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".view.SplashActivity">

    <ImageView
        android:id="@+id/earthId"
        android:layout_width="match_parent"
        android:layout_height="350sp"
        android:background="@drawable/earth_img" />

    <ImageView
        android:id="@+id/univLogo"
        android:layout_width="180sp"
        android:layout_height="180sp"
        android:layout_alignTop="@+id/earthId"
        android:layout_alignBottom="@+id/earthId"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginBottom="125dp"
        android:src="@drawable/univ_logo" />

</RelativeLayout>